<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorPrimaryInverse">@color/text_primary_inverted</item>
        <item name="android:textColorSecondaryInverse">@color/text_secondary_inverted</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MyAccentButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/btn_accent</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@anim/lift_up</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/btn_elevation</item>
    </style>

    <style name="MyBoringButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@anim/lift_up</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/btn_elevation</item>
    </style>

</resources>
